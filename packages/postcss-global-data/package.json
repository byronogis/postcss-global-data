{
  "name": "postcss-global-data",
  "type": "module",
  "version": "0.0.1",
  "description": "PostCSS plugin to define global data that will be injected into PostCSS for use in other plugins.",
  "author": "Byron <byronogis@outlook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/byronogis",
  "homepage": "https://github.com/byronogis/postcss-global-data#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/byronogis/postcss-global-data.git"
  },
  "bugs": "https://github.com/byronogis/postcss-global-data/issues",
  "keywords": [
    "css injection",
    "global data",
    "postcss-plugin",
    "productivity"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./package.json": "./package.json"
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "start": "jiti src/index.ts",
    "automd": "automd README.md",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm publish",
    "typecheck": "tsc --noEmit",
    "test": "node --test",
    "test:rewrite-expects": "REWRITE_EXPECTS=true node --test",
    "clear": "rimraf dist"
  },
  "peerDependencies": {
    "postcss": "^8.4"
  },
  "devDependencies": {
    "@csstools/postcss-tape": "*",
    "open-props": "^1.7.15",
    "postcss-custom-media": "^11.0.6",
    "postcss-custom-properties": "^14.0.6"
  }
}
